<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Controller">
    <Label layoutX="20.0" layoutY="23.0" text="Enter morse code ...">
      <font>
         <Font name="SansSerif Regular" size="13.0" />
      </font>
    </Label>
   <TextField fx:id="inputMorseCode" layoutX="20.0" layoutY="54.0" prefHeight="26.0" prefWidth="483.0">
      <font>
         <Font name="SansSerif Regular" size="13.0" />
      </font>
   </TextField>
   <Label fx:id="lblmorseTranslation" layoutX="24.0" layoutY="310.0">
      <font>
         <Font name="SansSerif Regular" size="13.0" />
      </font>
   </Label>
   <Button fx:id="btnTransMorse" layoutX="515.0" layoutY="52.0" mnemonicParsing="false" onMouseClicked="#handleTransCodeButton" text="Translate">
      <font>
         <Font name="SansSerif Regular" size="13.0" />
      </font></Button>
   <Label layoutX="20.0" layoutY="113.0" text="or enter text ...">
      <font>
         <Font name="SansSerif Regular" size="13.0" />
      </font>
   </Label>
   <TextField fx:id="inputText" layoutX="20.0" layoutY="144.0" prefHeight="26.0" prefWidth="483.0">
      <font>
         <Font name="SansSerif Regular" size="13.0" />
      </font>
   </TextField>
   <Button fx:id="btnTransText" layoutX="515.0" layoutY="142.0" mnemonicParsing="false" onMouseClicked="#handleTransTextButton" text="Translate">
      <font>
         <Font name="SansSerif Regular" size="13.0" />
      </font>
   </Button>
   <Label fx:id="lblTwo" layoutX="24.0" layoutY="282.0" text="Translates to ..." visible="false">
      <font>
         <Font name="SansSerif Regular" size="13.0" />
      </font>
   </Label>
   <Button fx:id="btnCopy" layoutX="523.0" layoutY="298.0" mnemonicParsing="false" onMouseClicked="#handleCopyButton" text="Copy" visible="false">
      <font>
         <Font name="SansSerif Regular" size="13.0" />
      </font></Button>

</AnchorPane>
